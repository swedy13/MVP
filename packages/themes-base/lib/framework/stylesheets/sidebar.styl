// TABLET
@media (min-width: 701px)
  .sidebar
    .menu
      z-index 70
      display flex
      flex-direction column
      align-items center
      position fixed
      right 0
      top 32px
      bottom 0
      width 45px
      background-color #777

      ul
        margin-top 5px
      
        li
          i
            margin 7px 0
            font-size 1.5em
            color white
            text-shadow 1px 1px 1px #333
    
    .panel
      z-index 50
      display none
      position fixed
      top 32px
      bottom 0
      right 45px
      width 400px
      padding 8px
      background-color #ddd
      box-shadow -5px 0 12px 0px #bbb, -2px 0 2px #888


