.entry
  display flex
  justify-content center
  padding 0 8px

  .container
    width 90%

    ul
      margin-top 6px
      
      li
        margin-bottom 12px

        p
          margin-bottom 4px
        
        input
          width calc(100% - 16px)

    span
      button
        padding 7px
        border-radius 3px
        
        &.signin
          background-color lightblue
          color white
          
        &.signup
          background-color lightgray