@import '../views/colors.styl'

// Default
.sb
  z-index 70
  position fixed
  bottom 0
  right 0
  height calc(100vh - 32px)
  width 45px
  background-color #888

  .sb-panel
    display none


// Mobile
@media (max-width: 736px)
  .sb
    display none


// Tablet & Desktop
@media (min-width: 737px)
  .sb
    display flex


